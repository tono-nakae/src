#!/bin/sh
# $NetBSD: script2,v 1.1 2001/01/24 09:35:57 garbled Exp $
if [ -z "$PKGSRCDIR" ]; then
	if [ -d "/usr/pkgsrc" ]; then
		PKGSRCDIR="/usr/pkgsrc"
	fi
	if [ -d "/usr/src/pkgsrc" ]; then
		PKGSRCDIR="/usr/src/pkgsrc"
	fi
fi
cd $PKGSRCDIR/$2/$1
if [ "$?" != "1" ]; then
	exit 0
fi
ls -1d */ | sed -e s'@/@@' | egrep -v '(mk|distfiles)'
