#!/bin/sh
# $NetBSD: script,v 1.1 2001/01/05 02:07:01 garbled Exp $
cat /etc/passwd | awk ' \
	BEGIN { \
	 	FS=":"; \
		print "Username    Real name			      UID" \
	} \
	{ \
		gsub("&", $1); \
		printf("%s", $1);
		for (x=length($1); x < 12; x++ ) \
			printf(" "); \
		printf("%s", $5); \
		for (x=length($5); x < 30; x++ ) \
			printf(" "); \
		printf("%7d\n", $3); \
	}'
