#!/bin/sh
PROG=${1-UNKNOWN}

ConfStr="$PROG"

ConfStr="$ConfStr 4.2.4p2"

case "$CSET" in
 '') ;;
 *) ConfStr="$ConfStr@$CSET" ;;
esac

case "-lcrypto" in
 '') ;;
 -lcrypto)
    ConfStr="${ConfStr}-o" ;;
 *) ConfStr="${ConfStr}-?" ;;
esac

echo "Version <${ConfStr}>";

rm -f version.c
cat > version.c << -EoF-
/*
 * version file for $PROG
 */
#include <config.h>
const char * Version = "${ConfStr}";
-EoF-
