#
# Verifies that the remove operation works.
#

test_run() {
	test_mount

	test_name "Files can be removed"
	test -f a && die
	touch a || die
	test -f a || die
	rm a || die
	test -f a && die

	test_name "Files with uchg flags cannot be removed"
	touch a || die
	chflags uchg a || die
	rm -f a 2>/dev/null && die
	chflags nouchg a || die
	rm a || die
	test -f a && die

	test_unmount
}

. ./h_funcs.subr
