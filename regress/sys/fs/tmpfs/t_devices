#
# Verifies that special devices created inside tmpfs work.
#

test_run() {
	test_mount

	umask 022 || die

	test_name "Creation of the 'zero' character device"
	mknod zero c 2 12 || die

	test_name "Read from the created device"
	dd if=zero of=a bs=10k count=1 >/dev/null 2>&1 || die
	[ $(md5 a | cut -d ' ' -f 4) = 1276481102f218c981e0324180bafd9f ] || die

	test_name "Creation of the 'null' character device"
	mknod null c 2 2 || die

	test_name "Write to the created device"
	echo foo >null
	eval $(stat -s null)
	[ ${st_size} -eq 0 ] || die

	test_unmount
}

. ./h_funcs.subr
