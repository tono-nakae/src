#
# Verifies that the mknod operation works.
#

test_run() {
	test_mount

	umask 022 || die

	test_name "Block devices can be created"
	mknod fd0a b 2 0 || die
	eval $(stat -s fd0a)
	[ ${st_mode} = 060644 ] || die
	[ ${st_rdev} -eq 512 ] || die

	test_name "Character devices can be created"
	mknod null c 2 2 || die
	eval $(stat -s null)
	[ ${st_mode} = 020644 ] || die
	[ ${st_rdev} -eq 514 ] || die

	test_name "Named pipes can be created"
	mknod pipe p || die
	eval $(stat -s pipe)
	[ ${st_mode} = 010644 ] || die

	test_unmount
}

. ./h_funcs.subr
