#!/bin/sh -
#
#	$NetBSD: build_all,v 1.4 1996/04/12 20:27:42 cgd Exp $

cflist=`cd ../conf ; find . -type f | grep -v '[a-z]' | sed -e 's,^\./,,'`

docmd()
{

	echo "    ===> $*"
#	echo "        eval ($*)"
	eval "($*)"
	echo "    <==="
}

docf()
{
	echo "===> $1"
	(
		docmd "cd ../conf ; config $cf" 
		cd $cf
		docmd "time make -k clean"
		docmd "time make -k depend"
		docmd "time make -k"
	)
	echo "<==="
	echo ""
}

for cf in $cflist; do
	docf $cf
done
