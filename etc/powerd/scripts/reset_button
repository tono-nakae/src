#!/bin/sh -
#
#	$NetBSD: reset_button,v 1.1 2003/04/20 20:55:40 thorpej Exp $
#
# Generic script for reset button events.  We simply attempt to
# reboot the system gracefully.
#
# Arguments passed by powerd(8):
#
#	device event

case "${2}" in
pressed)
	/sbin/shutdown -r now
	exit 0
	;;

*)
	echo "${0}: unsupported event ${2} on device ${1}" >&1
	exit 1
	;;
esac
