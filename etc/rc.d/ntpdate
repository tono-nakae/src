#!/bin/sh
#
# $NetBSD: ntpdate,v 1.13 2003/10/20 16:09:15 fredb Exp $
#

# PROVIDE: ntpdate
# REQUIRE: NETWORKING syslogd

. /etc/rc.subr

name="ntpdate"
rcvar=$name
command="/usr/sbin/${name}"
start_cmd="ntpdate_start"
stop_cmd=":"

ntpdate_start()
{
	if [ -z "$ntpdate_hosts" ]; then
		ntpdate_hosts=`awk '
			/^#/				{ next }
			/^(server|peer)[ \t]*127.127/	{ next }
			/^(server|peer)/		{ if ($2 ~ /[-]/)
							    print $3
							  else
							    print $2 }
			/^multicastclient$/		{ print "224.0.1.1" }
			/^multicastclient/		{ print $2 }
		' </etc/ntp.conf`
	fi
	if [ -n "$ntpdate_hosts"  ]; then
		echo "Setting date via ntp."
		$command $rc_flags $ntpdate_hosts
	fi
}

load_rc_config $name
run_rc_command "$1"
