#!/bin/sh
#
#	$NetBSD: veriexec,v 1.4 2005/04/20 13:44:45 blymn Exp $
#

# PROVIDE: veriexec
# REQUIRE: mountcritlocal
# BEFORE:  securelevel

$_rc_subr_loaded . /etc/rc.subr

name="veriexec"
rcvar=$name
start_cmd="veriexec_start"

veriexec_start()
{
	echo -n "Loading fingerprints..."
	/sbin/veriexecctl load /etc/signatures
	echo " done."
}

load_rc_config $name
run_rc_command "$1"
