#!/bin/sh
#
# $NetBSD: yppasswdd,v 1.9 2004/10/11 15:00:51 christos Exp $
#

# PROVIDE: yppasswdd
# REQUIRE: rpcbind ypserv ypbind
# BEFORE:  LOGIN

$_rc_subr_loaded . /etc/rc.subr

name="yppasswdd"
rcvar=$name
command="/usr/sbin/rpc.${name}"
required_vars="rpcbind ypserv"
start_precmd="yppasswdd_precmd"

yppasswdd_precmd()
{
	_domain=$(domainname)
	if [ -z "$_domain" ]; then
		warn "domainname(1) is not set."
		return 1
	fi
}

load_rc_config $name
run_rc_command "$1"
