#!/bin/sh
#
# $NetBSD: accounting,v 1.1.1.1 2000/03/10 11:53:25 lukem Exp $
#

# PROVIDE: accounting
# REQUIRE: mountall

. /etc/rc.subr
. /etc/rc.conf

name="accounting"
start_precmd="checkyesno accounting"
start_cmd="accounting_start"
stop_precmd=$start_precmd
stop_cmd="accounting_stop"

accounting_start()
{
	if [ -f /var/account/acct ]; then
		echo "Turning on accounting."
		/usr/sbin/accton /var/account/acct
	fi
}

accounting_stop()
{
	echo "Turning off accounting."
	/usr/sbin/accton
}

run_rc_command "$1"
