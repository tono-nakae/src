#!/bin/sh
#
# $NetBSD: ccd,v 1.6 2009/04/21 16:08:57 joerg Exp $
#

# PROVIDE: ccd
# BEFORE:  DISKS

$_rc_subr_loaded . /etc/rc.subr

name="ccd"
rcvar=$name
start_cmd="ccd_start"
stop_cmd=":"

ccd_start()
{
	if [ -f /etc/ccd.conf ]; then
		echo "Configuring CCD devices."
		ccdconfig -C
	fi
}

load_rc_config $name
run_rc_command "$1"
