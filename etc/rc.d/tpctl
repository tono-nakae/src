#!/bin/sh
#
# $NetBSD: tpctl,v 1.1 2002/08/27 14:12:14 takemura Exp $
#

# PROVIDE: tpctl
# REQUIRE: DAEMON wscons
# BEFORE:  LOGIN

. /etc/rc.subr

name="tpctl"
rcvar=$name
start_cmd="run_tpctl"
stop_cmd=":"

run_tpctl()
{
	echo "Calibrating touch panel..."
	/usr/sbin/${name} $rc_flags
}

load_rc_config $name
run_rc_command "$1"
