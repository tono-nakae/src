#!/bin/sh
#
# $NetBSD: cgd,v 1.7 2009/09/11 18:18:03 apb Exp $
#

# PROVIDE: cgd
# REQUIRE: rndctl
# BEFORE:  DISKS
# KEYWORD: interactive

$_rc_subr_loaded . /etc/rc.subr

name="cgd"
rcvar=$name
start_cmd="cgd_start"
stop_cmd=":"

cgd_start()
{
	if [ -f /etc/cgd/cgd.conf ]; then
		print_rc_normal "Configuring CGD devices."
		cgdconfig -C
	fi
}

load_rc_config $name
run_rc_command "$1"
