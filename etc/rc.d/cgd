#!/bin/sh
#
# $NetBSD: cgd,v 1.4 2005/03/02 12:14:47 tv Exp $
#

# PROVIDE: disks
# KEYWORD: shutdown

$_rc_subr_loaded . /etc/rc.subr

name="cgd"
rcvar=$name
start_cmd="cgd_start"
stop_cmd="cgd_stop"

cgd_start()
{
	if [ -f /etc/cgd/cgd.conf ]; then
		echo "Configuring CGD devices."
		cgdconfig -C
	fi
}

cgd_stop()
{
	if [ -f /etc/cgd/cgd.conf ]; then
		echo "Unconfiguring CGD devices."
		cgdconfig -U
	fi
}

load_rc_config $name
run_rc_command "$1"
