#!/bin/sh
#
# $NetBSD: raidframe,v 1.3 2000/05/13 08:45:08 lukem Exp $
#

# PROVIDE: disks

. /etc/rc.subr

name="raidframe"
start_cmd="raidframe_start"
stop_cmd=":"

raidframe_start()
{
	#	Configure raid devices.
	#
	for dev in 0 1 2 3; do
		if [ -f /etc/raid$dev.conf ]; then
			raidctl -c /etc/raid$dev.conf raid$dev
		fi
	done
}

load_rc_config $name
run_rc_command "$1"
