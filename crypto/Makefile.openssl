.ifndef _MAKEFILE_OPENSSL_INCLUDED
_MAKEFILE_OPENSSL_INCLUDED=1

.include <bsd.own.mk>

OPENSSLSRC=	${CRYPTODIST}/openssl
CPPFLAGS+= -DOPENSSLDIR=\"/etc/openssl\"

.if (${MKCRYPTO_IDEA} == "no")
CPPFLAGS+= -DNO_IDEA
.endif

.if (${MKCRYPTO_RC5} == "no")
CPPFLAGS+= -DNO_RC5
.endif

.if (${MKCRYPTO_RSA} == "no")
CPPFLAGS+= -DNO_RSA
.endif

.endif
