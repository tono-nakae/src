FILESDIR=	${X11FONTDIR}/${ENCDIR}
.PATH:  	${X11SRCDIR.xc}/fonts/${ENCDIR}


FILES+=		${GZFILES}
CLEANFILES+=	${GZFILES}
CLEANFILES+=	${GZFILES:S/.gz$/.gz.tmp/}

.SUFFIXES: .enc .enc.gz
.enc.enc.gz:
	${_MKTARGET_CREATE}
	gzip -9fc ${.IMPSRC} > ${.TARGET}.tmp && mv ${.TARGET}.tmp ${.TARGET}


realall: ${FILES}

.include "${NETBSDSRCDIR}/x11/tools/mkfontdir/Makefile.mkfontdir"

afterinstall:
	${_MKMSG_CREATE} ${DESTDIR}${FILESDIR}/encodings.dir
	(cd ${DESTDIR}${FILESDIR} && \
	    rm -f encodings.dir ; \
	    ${MKFONTDIR} -n -r -p ${X11FONTDIR}/${ENCDIR}/ -e . ${ENCARGS} . ; \
	)
.if ${MKUNPRIVED} != "no"
	echo ".${FILESDIR}/encodings.dir type=file mode=0644 uname=root gname=wheel" \
	    | ${METALOG.add}
.endif

