.include <bsd.own.mk>
.include "${NETBSDSRCDIR}/distrib/common/Makefile.distrib"

.include <bsd.kernobj.mk>

RAMDISKDIR?=	$(.CURDIR)/../ramdisk/
KERN?=		netbsd-xxx
KERNNAME?=	netbsd.xxx
GZNAME?=	${KERNNAME}.gz
MDSETIMAGE?=	mdsetimage

.if ${RAMDISKDIR} != ""
RAMDISK	!=cd ${RAMDISKDIR}; ${MAKE} echoimage
.endif

CLEANFILES+=	${KERNNAME} ${GZNAME} netbsd.tmp*

realall: ${GZNAME}

.if defined(RAMDISK)
${KERNNAME}: ${KERN} ${RAMDISK}
	-/bin/rm -f netbsd.tmp*
	cp ${KERN} netbsd.tmp
	${MDSETIMAGE} -v netbsd.tmp ${RAMDISK}
	mv -f netbsd.tmp ${.TARGET}
.else
${KERNNAME}: ${KERN}
	cp ${KERN} ${.TARGET}
.endif

${GZNAME}: ${KERNNAME}
	gzip -cv9 ${KERNNAME} > ${.TARGET}

depend:

release: check_RELEASEDIR .WAIT ${KERNNAME} ${GZNAME}
.ifndef NOKERNCOPY
	${RELEASE_INSTALL} ${KERNNAME} ${GZNAME} ${RELEASEDIR}/binary/kernel
.endif


.include <bsd.prog.mk>
