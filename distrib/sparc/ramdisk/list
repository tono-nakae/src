# copy the crunched binary, link to it, and kill it
COPY	${OBJDIR}/ramdiskbin		sysinst
LINK	sysinst				bin/cat
LINK	sysinst				bin/chmod
LINK	sysinst				bin/cp
LINK	sysinst				bin/dd
LINK	sysinst				bin/df
LINK	sysinst				bin/ed
LINK	sysinst				bin/ln
LINK	sysinst				bin/ls
LINK	sysinst				bin/mkdir
LINK	sysinst				bin/mt
LINK	sysinst				bin/mv
LINK	sysinst				bin/pax
LINK	sysinst				bin/rm
LINK	sysinst				bin/rcmd
LINK	sysinst				bin/rcp
LINK	sysinst				bin/sh
LINK	sysinst				bin/stty
LINK	sysinst				bin/sync
LINK	sysinst				bin/test
LINK	sysinst				bin/[
LINK	sysinst				sbin/disklabel
LINK	sysinst				sbin/dmesg
LINK	sysinst				sbin/fsck
LINK	sysinst				sbin/fsck_ffs
LINK	sysinst				sbin/halt
LINK	sysinst				sbin/ifconfig
LINK	sysinst				sbin/init
LINK	sysinst				sbin/mknod
LINK	sysinst				sbin/mount
LINK	sysinst				sbin/mount_cd9660
LINK	sysinst				sbin/mount_ffs
LINK	sysinst				sbin/mount_kernfs
LINK	sysinst				sbin/mount_mfs
LINK	sysinst				sbin/mount_nfs
LINK	sysinst				sbin/newfs
LINK	sysinst				sbin/ping
LINK	sysinst				sbin/reboot
LINK	sysinst				sbin/restore
LINK	sysinst				sbin/route
LINK	sysinst				sbin/rrestore
LINK	sysinst				sbin/shutdown
LINK	sysinst				sbin/slattach
LINK	sysinst				sbin/umount
LINK	sysinst				usr/bin/cpio
LINK	sysinst				usr/bin/chgrp
LINK	sysinst				usr/bin/ftp
LINK	sysinst				usr/bin/getopt
LINK	sysinst				usr/bin/gunzip
LINK	sysinst				usr/bin/gzcat
LINK	sysinst				usr/bin/gzip
LINK	sysinst				usr/bin/less
LINK	sysinst				usr/bin/more
LINK	sysinst				usr/bin/rsh
LINK	sysinst				usr/bin/strings
LINK	sysinst				usr/bin/sed
LINK	sysinst				usr/bin/tar
LINK	sysinst				usr/bin/tset
LINK	sysinst				usr/mdec/installboot
LINK	sysinst				usr/sbin/chown
LINK	sysinst				usr/sbin/update

# copy the MAKEDEV script and make some devices
COPY    ${CURDIR}/../../../etc/etc.sparc/MAKEDEV          dev/MAKEDEV
SPECIAL cd dev; sh MAKEDEV floppy
SPECIAL /bin/rm dev/MAKEDEV

# we need the boot blocks /usr/mdec
COPY	${DESTDIR}/usr/mdec/binstall		usr/mdec/binstall
COPY	${DESTDIR}/usr/mdec/boot		usr/mdec/boot
LINK	usr/mdec/boot				usr/mdec/boot.net
COPY	${DESTDIR}/usr/mdec/bootxx		usr/mdec/bootxx

# and the termcap file
COPY	${CURDIR}/termcap.src 			usr/share/misc/termcap

# various files that we need in /etc for the install
COPY	${CURDIR}/../../../etc/etc.sparc/disktab	etc/disktab
COPY	${CURDIR}/../../../etc/group		etc/group
COPY	${CURDIR}/../../../etc/master.passwd	etc/master.passwd
COPY	${CURDIR}/../../../etc/protocols	etc/protocols
COPY	${CURDIR}/../../../etc/services	etc/services
SPECIAL	pwd_mkdb -p -d ./ etc/master.passwd

# the disktab explanation file
COPY    disktab.preinstall              etc/disktab.preinstall

# and the installation scripts
COPY	${CURDIR}/dot.profile			.profile

# Minimize use of MFS
SYMLINK	/tmp	var/tmp
