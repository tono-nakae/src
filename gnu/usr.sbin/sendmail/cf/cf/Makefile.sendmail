CFDIR?=		${.CURDIR}/..
CHMOD=		chmod
ROMODE=		444
RM=		rm -f

.if !defined(FILES)
.SUFFIXES: .cf .mc
.mc.cf:
.else
__makemc: .USE
.endif
	${RM} $@
	(cd ${CFDIR}/cf && \
	    ${TOOL_M4} ${CFDIR}/m4/cf.m4 ${.CURDIR}/${@:R}.mc > ${.OBJDIR}/$@)
	${CHMOD} ${ROMODE} $@

.for F in ${FILES:M*.mc}
${F:S/.mc/.cf/}: ${F} __makemc
.endfor
