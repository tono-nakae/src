# Client Makefiles define DEVICE and FONTFILES and provide rules for
#	individual font files

.MAIN: all

.include <bsd.own.mk>

# XXX -- this depends on ../include/defs.h
FONTDIR=	/usr/share/groff_font

DEVICEDIR?=	$(FONTDIR)/dev$(DEVICE)
FONTOWN?=	${FILESOWN}
FONTGRP?=	${FILESGRP}
FONTMODE?=	${FILESMODE}

PSPRINT=	lpr
DVIPRINT=	lpr -d
BROKEN_SPOOLER_FLAGS=7

.if ${MKSHARE} != "no"
realall:	$(FONTFILES)
.else
realall:
.endif

.if !target(clean)
clean cleandir distclean:
	-rm -f $(FONTFILES)
.else
COPY=	-c
.endif

.if ${MKSHARE} != "no"
FILES=${FONTFILES}
FILESDIR=${DEVICEDIR}
GENFILES=${FONTFILES:Mgenerate/*}
.for i in ${GENFILES}
FILESDIR_$i=${DEVICEDIR}/generate
.endfor
.endif

.include <bsd.prog.mk>
