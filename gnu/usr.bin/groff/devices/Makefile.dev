# Client Makefiles define DEVICE and FONTFILES and provide rules for
#	individual font files

DEVICES_=no_libraries
.include "../../Makefile.cfg"

# XXX -- this depends on ../include/defs.h
FONTDIR=	/usr/share/groff_font

DEVICEDIR?=	$(DESTDIR)$(FONTDIR)/dev$(DEVICE)
FONTOWN?=	bin
FONTGRP?=	bin
FONTMODE?=	444

.MAIN: all

all:	$(FONTFILES)

.if !target(clean)
clean cleandir:
	-rm -f $(FONTFILES)
.else
COPY=	-c
.endif

.if !target(install)
FILES=${FONTFILES}
FILESDIR=${DEVICEDIR}
FILESOWN=${FONTOWN}
FILESGRP=${FONTGRP}
FILESMODE=${FONTMODE}
GENFILES=${FONTFILES:Mgenerate/*}
.for i in ${GENFILES}
FILESDIR_$i=${DEVICEDIR}/generate
.endfor
.endif

.include <bsd.prog.mk>
